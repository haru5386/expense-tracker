<div class="row mt-4">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2>Register</h2>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group mt-2">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="{{name}}">
        </div>
        <div class="form-group mt-2">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password"
            value="{{password}}">
        </div>
        <div class="form-group">
          <label for="ConfirmPassword">Confirm Password</label>
          <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword"
            placeholder="ConfirmPassword" value="{{ConfirmPassword}}">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Register</button>
      </form>
      <a href="/auth/facebook/">
        <button class="btn btn-primary mt-2">Facebook Register</button>
      </a>
      <p>Have An Accounts?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>